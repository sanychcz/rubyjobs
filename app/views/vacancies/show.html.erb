<div class="row">
	<div class="row">
		<h1><%= @vacancy.title %></h1>	
	</div>
	<div class="row">
		<div class="large-8 columns">	
			<h4 class="subheader"><%= @vacancy.city  %></h4>	
			<% if @vacancy.hot?  %>
				<span class="alert label">HOT</span>
			<% end %>
			<% if @vacancy.junior? %>
				<span class="success label">Juniors</span>
			<% end %>	
			<p><%= @vacancy.description %></p>
		</div>
		<div class="large-4 columns">
		<ul class="pricing-table">
		  <li class="title">Company information</li>
		  <li class="price"><%= @vacancy.company %></li>
		  <li class="bullet-item"><%= mail_to @vacancy.email %></li>
		  <li class="bullet-item"><%= link_to @vacancy.web, "http://#{@vacancy.web}"%></li>
		  <li class="bullet-item"><%= @vacancy.phone %></li>
		  <li class="bullet-item"><%= @vacancy.person %></li>
		</ul>
		</div>
	</div>	
</div>


