<% if object.errors.any? %>
	<div data-alert class="alert-box">
 		The form contains <%= pluralize(object.errors.count, "error") %><a href="#" class="close">&times;</a>
 	</div>	
    <ul>
    <% object.errors.full_messages.each do |msg| %>
    	<div data-alert class="alert-box alert"> 
      	<li>* <%= msg %></li><a href="#" class="close">&times;</a>
      </div>	
    <% end %>
    </ul>
<% end %>